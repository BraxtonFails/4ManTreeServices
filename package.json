{
  "name": "4man-tree-services",
  "version": "1.0.0",
  "description": "4man Tree Services Website",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "watch": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "serve": "live-server --port=3000",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "live-server": "^1.2.2",
    "concurrently": "^8.2.2"
  }
} 